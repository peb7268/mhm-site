{
  "name": "mhm-site",
  "version": "1.0.0",
  "description": "Mile High Marketing website - Phase 1 HTML/SCSS/JS",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run webpack:watch\" \"npm run serve\"",
    "build": "webpack --mode production",
    "webpack:watch": "webpack --mode development --watch",
    "serve": "browser-sync start --server dist --files 'dist/**/*' --port 3001 --ui-port 3002",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "html",
    "scss",
    "javascript",
    "webpack",
    "browser-sync"
  ],
  "author": "Mile High Marketing",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.2",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  }
}